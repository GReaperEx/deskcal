{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Debug build",
            "type": "shell",
            "command": "make -j6 debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Debug rebuild",
            "type": "shell",
            "command": "make clean && make -j6 debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}